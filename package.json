{
  "name": "template_fe",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "antd": "^4.9.0",
    "components_fe": "git+ssh://git@github.com:DoOR-Team/components_fe.git",
    "eslint": "^7.14.0",
    "eslint-plugin-react": "^7.21.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "recoil": "^0.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "eslint --fix . && react-scripts build",
    "eject": "react-scripts eject",
    "lint:fix": "eslint --fix ."
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "module": true
      }
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-undef": [
        "off"
      ],
      "react/jsx-indent": [
        "error",
        4
      ]
    },
    "plugins": [
      "react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
